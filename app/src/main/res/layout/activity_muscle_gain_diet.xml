<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- Page Header -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Gain Diet Plan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian nutrition guide to build muscle"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp"/>

        <!-- Breakfast Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFF7E6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/breakfastTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/breakfastDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oats with milk &amp; nuts, banana, peanut butter toast"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lunch Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E6F7FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lunchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/lunchDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brown rice, dal, paneer curry, green salad"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dinner Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFE6F0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dinnerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/dinnerDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapati, mixed vegetable curry, curd, soya chunks"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips Section Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp"
            android:backgroundTint="#FFF0E6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tipsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tipsContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Drink at least 3L water daily\n• Include nuts &amp; seeds for healthy fats\n• Eat every 3–4 hours\n• Focus on protein-rich vegetarian foods like paneer, soya, lentils"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
